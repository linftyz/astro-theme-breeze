---
import { Icon } from "astro-icon/components";
import site from "@/config/site";
---

<section class="mb-16">
  <h2 class="mb-6 text-3xl font-bold tracking-tight">{site.hero.greeting}</h2>
  <p
    class="text-lg leading-relaxed font-light text-muted-foreground"
    set:html={site.hero.description}
  />
</section>

{
  site.hero.cards.length > 0 && (
    <div class="mb-16 grid grid-cols-1 gap-4 md:grid-cols-2">
      {site.hero.cards.map((card) => (
        <div class="flex gap-4 rounded-2xl border border-border/50 bg-muted/30 p-5">
          <div class="text-lg">
            <Icon name={card.icon} />
          </div>
          <div class="flex flex-col">
            <span class="text-[10px] font-bold tracking-widest text-muted-foreground uppercase">
              {card.label}
            </span>
            <span class="text-sm text-foreground/80">{card.value}</span>
          </div>
        </div>
      ))}
    </div>
  )
}
